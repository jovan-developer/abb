<header class="header header--unauth">
    <div class="container-wide">
        <div class="header__inner">
            
            <button class="header__exit">
                <svg class="s-icon s-icon--md">
                    <use xlink:href="img/svg/sprite1.svg#ic32_arrow_left"></use>
                </svg>
            </button>

            <h1 class="header__page-title">
                {{headerTitle}}
            </h1>

            <nav class="header__menu" data-simplebar>
                <div class="header__list-wrapper">
                    <div class="header__list-title">
                        Меню
                        <a class="header__logo logo" href="#">
                            <img class="logo__img" src="img/abb_logo.svg" alt="Логотип ABB">
                        </a>
                    </div>
                    <ul class="header__list">
                        <li class="header__item header__item--active">
                            <a class="header__link" href="#">Описание API</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Авторизация</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Данные о товарах</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Данные ETIM</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Сертификаты</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Изображения</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Цены</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Остатки</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Остатки онлайн</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Весо-габаритные характеристики</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Связанные товары</a>
                        </li>
                        <li class="header__item">
                            <a class="header__link" href="#">Замены</a>
                        </li>
                    </ul>
                </div>

            </nav>

            <button class="header__filter">
                <svg class="s-icon s-icon--md">
                    <use xlink:href="img/svg/sprite1.svg#ic32_filter"></use>
                </svg>
            </button>

            <div class="header__search">
                <label class="header__search-label">
                    <svg class="header__search-close s-icon s-icon--md">
                        <use xlink:href="img/svg/sprite1.svg#ic32_arrow_left"></use>
                    </svg>
                    <input class="header__search-input" type="search"
                        placeholder="Код заказа, артикул/тип, наименование">
                    <svg class="header__search-clear s-icon s-icon--md">
                        <use xlink:href="img/svg/sprite1.svg#ic32_cancel"></use>
                    </svg>
                </label>
                <svg class="header__search-open s-icon s-icon--md">
                    <use xlink:href="img/svg/sprite1.svg#ic24_search-m"></use>
                </svg>
            </div>
        
        </div>
    </div>
</header>