<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <meta name="description" content="Каталог товаров на сайте DSF">

    <title>Certification B2C | ABB</title>
    <link rel="stylesheet" href="css/simplebar.min.css">
    <link rel="stylesheet" href="plugins/swiper.min.css">
    <link rel="stylesheet" href="css/main.min.css">

    <noscript>
        <style>
            /**
          * Reinstate scrolling for non-JS clients
          */
            .simplebar-content-wrapper {
                overflow: auto;
            }
        </style>
    </noscript>
</head>

<body>
    {% set headerAuth = true %}
    {% include 'parts/header-account.njk' %}

    <main class="main">
        {% include 'parts/submenu.njk' %}
        {% include 'parts/breadcrumbs.njk' %}

        <section class="cert">
            <div class="container">
                <div class="cert__inner">
                    <div class="cert__title cert__title--indent-sm page-title">
                        <h1>Сертификация</h1>
                        <button class="cert__btn-order btn btn--primary btn--icon">
                            <svg class="s-icon">
                                <use xlink:href="img/svg/sprite1.svg#ic24_file_bttn-colorful"></use>
                            </svg>
                            Подать новую заявку
                        </button>
                    </div>

                    {% include 'parts/cert-table.njk' %}
                </div>
            </div>
        </section>
    </main>

    {% include 'parts/footer.njk' %}
    {% include 'parts/cert-modal.njk' %}


    <script src="plugins/simplebar.js"></script>
    <script src="plugins/inputmask.js"></script>
    <script src="plugins/swiper-bundle.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>